{
  "name": "peto-contract",
  "description": "Solidity smart contracts for Peto MVP",
  "version": "0.0.1",
  "scripts": {
    "clean": "shx rm -rf ./artifacts ./cache ./coverage ./typechain-types ./coverage.json && yarn typechain",
    "commit": "git-cz",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile && tsc",
    "verify": "hardhat verify",
    "coverage": "hardhat coverage --network hardhat --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" && yarn typechain",
    "deploy": "hardhat deploy",
    "deploy:accounts": "hardhat deploy --tags accounts",
    "deploy:proxy": "hardhat deploy --tags PetoContract:proxy",
    "deploy:verify": "hardhat deploy --tags PetoContract:verify",
    "deploy:init": "hardhat deploy --tags PetoContract:init",
    "deploy:upgrade": "hardhat deploy --tags PetoContract:upgrade",
    "deploy:transfer": "hardhat deploy --tags PetoContract:transfer",
    "deploy:generate-metadata": "hardhat deploy --tags misc:generate-metadata",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yml --ignore-path ./.eslintignore --ext .js,.ts .",
    "postinstall": "husky install && DOTENV_CONFIG_PATH=./.env.example yarn typechain",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "format": "prettier --config ./.prettierrc.yml --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "format:check": "prettier --check --config ./.prettierrc.yml \"**/*.{js,json,md,sol,ts,yml}\"",
    "test": "hardhat test --network hardhat",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/bignumber": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.3",
    "@openzeppelin/contracts": "^4.8.0",
    "@openzeppelin/contracts-upgradeable": "^4.8.0",
    "@openzeppelin/hardhat-upgrades": "^1.21.0",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@typechain/ethers-v5": "^10.1.1",
    "@typechain/hardhat": "^6.1.4",
    "@types/chai": "^4.3.4",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "app-root-path": "^3.1.0",
    "chai": "^4.3.7",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dayjs": "^1.11.6",
    "dotenv": "^16.0.3",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "ethers": "^5.7.2",
    "fastify-tsconfig": "^1.0.1",
    "fs-extra": "^11.1.0",
    "hardhat": "^2.12.3",
    "hardhat-deploy": "^0.11.21",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "lodash": "^4.17.21",
    "mocha": "^10.1.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.0",
    "prettier-plugin-solidity": "^1.0.0",
    "shx": "^0.3.4",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.3"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethers",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity",
    "typescript",
    "typechain"
  ],
  "packageManager": "yarn@3.2.1",
  "publishConfig": {
    "access": "public"
  }
}
